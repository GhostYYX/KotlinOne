<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="tabView">@style/MyTabView</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>


    <!-- 带图标的tab宽度 -->
    <style name="MyTabView" parent="TabView">
        <item name="iconWidth">@dimen/bottomTab_iconWidth</item>
        <item name="iconHeight">@dimen/bottomTab_iconHeight</item>
        <item name="android:background">#fafafa</item>
        <item name="android:textColor">@color/activity_main_tab_text_selector</item>
        <item name="android:textSize">@dimen/bottomTab_textSize</item>
    </style>

    <!-- 去掉 Toolbar/ActionBar 左边的空白 -->
    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

</resources>
